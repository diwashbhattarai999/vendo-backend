{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always" // Fix all ESLint issues on save
  },
  "editor.formatOnSave": true, // Format files on save
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Use Prettier as the default formatter
  "i18n-ally.localesPaths": ["locales"], // Path to the locales folder
  "prettier.singleQuote": true, // Use single quotes
  "prettier.trailingComma": "all", // Add trailing commas
  "prettier.tabWidth": 2, // Use 2 spaces for indentation
  "files.autoSave": "onFocusChange", // Save files when focus changes
  "terminal.integrated.defaultProfile.windows": "Git Bash" // Use Git Bash as the default terminal
}
