{
  "name": "vendo-backend",
  "version": "1.0.0",
  "description": "Backend for Vendo, a SaaS platform.",
  "author": {
    "name": "Diwash Bhattarai",
    "email": "diwashb999@gmail.com",
    "url": "https://diwashb.me"
  },
  "license": "MIT",
  "main": "src/server.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/diwashbhattarai999/vendo-backend"
  },
  "bugs": {
    "url": "https://github.com/diwashbhattarai999/vendo-backend/issues"
  },
  "keywords": [
    "Vendo",
    "SaaS",
    "website builder",
    "CRM",
    "e-commerce",
    "backend",
    "Node.js",
    "Express",
    "TypeScript",
    "Prisma",
    "PostgreSQL",
    "API"
  ],
  "scripts": {
    "clean": "tsc --build --clean && rm -rf dist && rm -rf logs",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc -p tsconfig.prod.json && tsc-alias -p tsconfig.prod.json && cp -r public dist/public",
    "start": "cross-env NODE_ENV=production node dist/src/server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,ts}\" --ignore-pattern 'dist/**' --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --ignore-pattern 'dist/**' --fix --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,md}\"",
    "prepare": "husky || true",
    "commit": "git cz",
    "release": "standard-version",
    "db:studio": "dotenv -e .env.development -- npx prisma studio",
    "db:pull": "dotenv -e .env.development -- pnpm prisma db pull",
    "db:reset": "dotenv -e .env.development -- pnpm prisma migrate reset --force",
    "db:migrate": "dotenv -e .env.development -- pnpm prisma migrate dev",
    "db:generate": "dotenv -e .env.development -- pnpm prisma generate",
    "docker:compose:dev": "docker compose up -d vendo-backend-dev",
    "docker:compose:prod": "docker compose up -d vendo-backend-prod",
    "docker:compose:stop": "docker compose down",
    "logs:dev": "docker logs -f vendo-backend-dev",
    "logs:prod": "docker logs -f vendo-backend-prod"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@sendgrid/mail": "^8.1.4",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-ruid": "^1.1.5",
    "express-slow-down": "^2.0.3",
    "express-useragent": "^1.0.15",
    "helmet": "^8.0.0",
    "i18next": "^24.2.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.1",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "prom-client": "^15.1.3",
    "request-ip": "^3.3.0",
    "serve-favicon": "^2.5.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@eslint/js": "^9.21.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-useragent": "^1.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.9",
    "@types/request-ip": "^0.0.41",
    "@types/serve-favicon": "^2.5.7",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "lint-staged": {
    "src/**/*{.js,ts}": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "pnpm": ">=9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  },
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af"
}
